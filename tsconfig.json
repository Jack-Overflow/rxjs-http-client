{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": false,
    "stripInternal": true,
    "noEmit": true,
    "declarationMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "AMD",
    "target": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "rxjs-http-client": [
        "./src/index"
      ]
    },
    "typeRoots": [
      "index.d.ts"
    ]
  }
}
